<chart:RibbonWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    chart:SkinStorage.VisualStyle="Office2013"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModifyCellStyle"
        xmlns:chart="http://schemas.syncfusion.com/wpf" x:Class="ModifyCellStyle.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-112">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <chart:SfSpreadsheetRibbon x:Name="ribbon" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" DataContext="{Binding ElementName=spreadSheetControl, Mode=OneWay}" Grid.ColumnSpan="2"/>
        <chart:SfSpreadsheet x:Name="spreadSheetControl" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</chart:RibbonWindow>
